<div class="d-flex justify-content-between py-3">
    <div>
        <a class="btn btn-outline-success me-2" href="/admin/add">Add new product</a>
        <a class="btn btn-outline-danger me-2" href="/admin/deleteall"
           onclick="return confirm('Are you sure you want to delete all students?');">Delete all products</a>
        <a class="btn btn-outline-primary" href="/category">Category Management</a>
    </div>
    <div>
        <button class="btn btn-outline-secondary dropdown-toggle align-items-end" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Sort
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" href="/admin/sortprice/asc">Sort by price ascending</a></li>
            <li><a class="dropdown-item" href="/admin/sortprice/dsc">Sort by price descending</a></li>
        </ul>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-light text-center">
        <tr>
            <th class="align-middle bg-primary text-white col-1">SKU</th>
            <th class="align-middle bg-primary text-white col-2">Product Name</th>
            <th class="align-middle bg-primary text-white col-1">Category</th>
            <th class="align-middle bg-primary text-white col-3">Description</th>
            <th class="align-middle bg-primary text-white">Image</th>
            <th class="align-middle bg-primary text-white col-1">Price</th>
            <th class="align-middle bg-primary text-white col-2">Menu</th>
        </tr>
        </thead>
        <tbody>
        {{#each products}}
            <tr>
                <td class="align-middle text-center col-1">{{sku}}</td>
                <td class="align-middle text-center col-2">{{name}}</td>
                <td class="align-middle text-center col-1">{{category_id}}</td>
                <td class="align-middle text-center col-3">{{description}}</td>
                <td class="align-middle text-center d-flex justify-content-center ">
                    <a href="/detail/{{_id}}">
                        <img src="{{image}}" width="100" height="100" alt="product image">
                    </a>
                </td>
                <td class="align-middle text-center fw-bold text-success col-1">$ {{price}}</td>
                <td class="align-middle text-center col-2"> <!-- Center align content horizontally -->
                    <div class="d-flex justify-content-center align-items-center btn-group" role="group">
                        <!-- Center buttons vertically and horizontally -->
                        <a class="btn btn-outline-success " href="/detail/{{_id}}">Detail</a>
                        <a class="btn btn-outline-primary" href="/admin/edit/{{_id}}">Edit</a>
                        <a class="btn btn-outline-danger" href="/admin/delete/{{_id}}"
                           onclick="return confirm('Do you want to delete this product?')">Delete
                        </a>
                    </div>
                </td>
            </tr>



        {{/each}}
        </tbody>
    </table>
</div>