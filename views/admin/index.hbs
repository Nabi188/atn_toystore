<div class="d-flex justify-content-between py-3">
    <div>
        <a class="btn btn-primary me-2" href="/admin/add">Add new product</a>
        <a class="btn btn-success" href="/admin/deleteall"
           onclick="return confirm('Are you sure you want to delete all students?');">Delete all products</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-light text-center">
        <tr>
            <th class="align-middle bg-primary text-white">SKU</th>
            <th class="align-middle bg-primary text-white">Product Name</th>
            <th class="align-middle bg-primary text-white">Category</th>
            <th class="align-middle bg-primary text-white">Description</th>
            <th class="align-middle bg-primary text-white">Image</th>
            <th class="align-middle bg-primary text-white">Price</th>
            <th class="align-middle bg-primary text-white">Menu</th>
        </tr>
        </thead>
        <tbody>
        {{#each products}}
            <tr>
                <td class="align-middle text-center">{{sku}}</td>
                <td class="align-middle text-center">{{name}}</td>
                <td class="align-middle text-center">{{category_id}}</td>
                <td class="align-middle text-center">{{description}}</td>
                <td class="align-middle text-center d-flex justify-content-center">
                    <a href="/detail/{{_id}}">
                        <img src="{{img}}" width="100" height="100" alt="student image">
                    </a>
                </td>
                <td class="align-middle text-center">{{price}}</td>
                <td class="align-middle text-center"> <!-- Center align content horizontally -->
                    <div class="d-flex justify-content-center align-items-center">
                        <!-- Center buttons vertically and horizontally -->
                        <a class="btn btn-success me-2" href="/detail/{{_id}}">Detail</a>
                        <a class="btn btn-primary me-2" href="/admin/edit/{{_id}}">Edit</a>
                        <a class="btn btn-danger" href="/admin/delete/{{_id}}"
                           onclick="return confirm('Do you want to delete this product?')">Delete
                        </a>
                    </div>
                </td>
            </tr>

        {{/each}}
        </tbody>
    </table>
</div>