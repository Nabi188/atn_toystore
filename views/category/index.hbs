<div class="d-flex justify-content-between py-3">
    <div>
        <a class="btn btn-outline-success me-2" href="/category/add">Add new category</a>
        <a class="btn btn-outline-danger me-2" href="/category/deleteall"
           onclick="return confirm('Are you sure you want to delete all categories?');">Delete all categories</a>
        <a class="btn btn-outline-primary" href="/admin">Admin page</a>
    </div>
</div>

<div class="container-fluid">
    <table class="table table-striped table-hover">
        <thead class="table-primary">
        <tr>
            <th>Image</th>
            <th>Category Name</th>
            <th>Description</th>
            <th>Menu</th>
        </tr>
        </thead>
        <tbody>
        {{#each categoryList}}
            <tr>
                <td>
                    <img src="{{image}}" width="100px">
                </td>
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="/category/edit/{{_id}}" class="btn btn-primary">Edit</a>
                        <a href="/category/delete/{{_id}}" class="btn btn-danger"
                           onclick="confirm('Do you want to delete this category?')">Delete</a>
                    </div>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
