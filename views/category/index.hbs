<div class="container">
    <table class="table table-striped table-hover">
        <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Category Name</th>
            <th>Description</th>
            <th>Menu</th>
        </tr>
        </thead>
        <tbody>
        {{#each categoryList}}
            <tr>
                <td>{{id}}</td>
                <td>
                    <img src="{{image}}" width="100px">
                </td>
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="/class/detail/{{_id}}" class="btn btn-success">Detail</a>
                        <a href="/class/edit/{{_id}}" class="btn btn-warning">Edit</a>
                        <a href="/class/delete/{{_id}}" class="btn btn-danger"
                           onclick="confirm('Do you want to delete this category?')">Delete</a>
                    </div>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
