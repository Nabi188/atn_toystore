<div class="container">
    <h1 class="text-center px-4 mt-5">Product List</h1>
    <div class="row mt-4">
        {{#each productList}}
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="{{image}}" alt="Product Image" class="img-fluid mb-3">
                        <a class="fs-6 text-center grey-text text-decoration-none">{{category_id}}</a>
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">Description: {{description}}</p>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-success"><i class="fa-solid fa-cart-shopping me-2"></i> View Detail
                        </button>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>



